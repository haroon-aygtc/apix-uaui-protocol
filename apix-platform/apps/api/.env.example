# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://apix:apixpassword@localhost:5432/apix?schema=public

# Auth
AUTH_JWT_SECRET=replace_with_strong_secret
AUTH_JWT_EXPIRES_IN=15m
AUTH_JWT_ISSUER=apix
AUTH_JWT_AUDIENCE=apix-clients
AUTH_REFRESH_SECRET=replace_with_strong_refresh_secret
AUTH_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=apix:
REDIS_CLUSTER_ENABLED=false
REDIS_STREAM_MAX_LENGTH=10000
REDIS_CONSUMER_GROUP=apix-consumers
REDIS_CONSUMER_NAME=apix-consumer-1
REDIS_STREAM_BLOCK_TIME=5000
REDIS_STREAM_COUNT=10

# WebSocket
WS_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_HEARTBEAT_INTERVAL=30000
